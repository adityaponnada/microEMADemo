<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:orientation="vertical"
    android:gravity="center" android:layout_gravity="center_horizontal" android:layout_height="match_parent" android:background="@color/white" tools:context=".GestureEMAActivity" tools:deviceIds="wear_round">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center" android:layout_gravity="center_horizontal"
        android:id="@+id/prompt_linear_layout">

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/question"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="2"
            android:background="@drawable/custom_button"
            android:ellipsize="none"
            android:inputType="textMultiLine"
            android:lines="4"
            android:maxLines="4"
            android:scrollHorizontally="false"
            android:text="Are you happy right now?"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/yes_answer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="Yes"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:maxLines="2"
            android:textSize="15sp"
            android:ellipsize="start"
            android:background="@drawable/custom_button"/>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray"/>

        <Button
            android:id="@+id/no_answer"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="No"
            android:textColor="@android:color/black"
            android:textAllCaps="false"
            android:maxLines="2"
            android:textSize="15sp"
            android:ellipsize="start"
            android:background="@drawable/custom_button"/>
    </LinearLayout>

</LinearLayout>
